<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

 <mapper namespace="com.memo.user.dao.UserMapper">
 	<select id="selectUserLoginId" resultType="com.memo.user.model.User">
 		SELECT
 			`id`
			, `loginId`
			, `password`
			, `name`
			, `email`
			, `profileImagePath`
			, `createdAt`
			, `updatedAt`
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	
 	<insert id="insertUser" parameterType="Map">
 		INSERT INTO `user`
 		(
 				 `loginId`
				, `password`
				, `name`
				, `email`
				, `profileImagePath`
				, `createdAt`
				, `updatedAt`
 		)
 		
		VALUES
		(
			#{loginId},
			#{password},
			#{name},
			#{email},
			#{profileImagePath},
			NOW(),
			NOW()
			
		)
 		
 	</insert>
 </mapper>